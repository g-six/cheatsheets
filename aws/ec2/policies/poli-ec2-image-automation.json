{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "EC2Images",
            "Effect": "Allow",
            "Action": [
                "ec2:DescribeImages",
                "ec2:DeregisterImage",
                "ec2:CreateImage"
            ],
            "Resource": "*"
        },
        {
            "Sid": "IAMRoles",
            "Effect": "Allow",
            "Action": "iam:PassRole",
            "Resource": [
                "arn:aws:iam::242600377548:role/role-ssm-automation",
                "arn:aws:iam::242600377548:role/instance-role"
            ]
        }
    ]
}
